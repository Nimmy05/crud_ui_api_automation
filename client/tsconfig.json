// tsconfig.json
{
  "compilerOptions": {
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["node", "playwright"],
    "paths": {
      "@utils/*": [
        "utils/*"
      ],
      "@configs/*": [
        "configs/*"
      ],
      "@data/*": [
        "src/data/*"
      ],
      "@constants": [
        "globalConfig/constants.ts"
      ]
    }
  }
}